<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/sydney_opera_1680249"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="192dp"
        android:layout_height="100dp"
        android:fontFamily="@font/chewy"
        android:text="Sydney's Best Resturants"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282" />

    <Button
        android:id="@+id/bList"
        android:layout_width="189dp"
        android:layout_height="102dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#3FC83F"
        android:text="Let's Go!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.632" />

    <Button
        android:id="@+id/bAbout"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#6CA1D1"
        android:text="About"
        app:layout_constraintEnd_toEndOf="@+id/bList"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bList"
        app:layout_constraintTop_toBottomOf="@+id/bList" />

    <Button
        android:id="@+id/bCredits"
        android:layout_width="0dp"

        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#6CA1D1"
        android:text="Credits"
        app:layout_constraintEnd_toEndOf="@+id/bAbout"
        app:layout_constraintStart_toStartOf="@+id/bAbout"
        app:layout_constraintTop_toBottomOf="@+id/bAbout" />

</androidx.constraintlayout.widget.ConstraintLayout>