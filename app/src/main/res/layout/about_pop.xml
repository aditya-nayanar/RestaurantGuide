<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#728BB8">

    <TextView
        android:id="@+id/textView"
        android:layout_width="153dp"
        android:layout_height="19dp"
        android:layout_marginTop="32dp"
        android:text="What is this app about?"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="256dp"
        android:layout_height="106dp"
        android:layout_marginTop="5dp"
        android:text="Sydney's Best is aimed at providing you with a comprehensive list of 10 resturants that are unique and exciting. Use this list anytime you're looking for a great selection of restaurants to try and explore at your next outing."
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="What does it include?"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="256dp"
        android:layout_height="123dp"
        android:layout_marginTop="5dp"
        android:text="This list will give you the name, cuisine, general location and a short description of how I like to describe the place. If you do want to learn more about the menu or find it on google maps, use the buttons at the bottom of the restaurant page."
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Keep a look out for the..."
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="252dp"
        android:layout_height="125dp"
        android:layout_marginTop="5dp"
        android:text="Name and Cuisine, placed on either side of the resturant cards in the list so you can skim view by name or cuisine. Also, have a quick look at the rating bars to get a better sense of how this restaurants compares on qualities other than taste."
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="218dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:text="Tap anywhere outside this box to exit!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />
</androidx.constraintlayout.widget.ConstraintLayout>